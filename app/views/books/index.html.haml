%h1 Listing books

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Price      
      %th Image
      %th
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= truncate(book.description)
        %td= book.price   
        %td= image_tag(book.cover.url.to_s)     
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Book', new_book_path
