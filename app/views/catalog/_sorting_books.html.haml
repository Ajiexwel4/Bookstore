.dropdowns.pull-right
  .dropdown.width-240
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      Sorting
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li
        = link_to 'Newest first', catalog_path(sorting: 'newest')
      %li
        = link_to 'Popular first', catalog_path(sorting: 'popular') 
      %li
        = link_to 'Price: Low to hight', catalog_path(sorting: 'cheaper')
      %li
        = link_to 'Price: Hight to low', catalog_path(sorting: 'expensive')