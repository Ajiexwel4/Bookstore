%h1.general-title-margin Checkout
%ul.steps.list-inline
  - wizard_steps.each_with_index do |step_name, index|
    - if index != 0
      %li.step-divider
    %li.step{class: "#{"active" if past_step?(step_name) || step_name == step}"}
      %span.step-number
        = index.next unless step == :complete
        - if step == :complete 
          %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = step_name.to_s.capitalize