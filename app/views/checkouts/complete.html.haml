%main.container.general-main-wrap
  = render 'steps'
  .text-center.mb-40
    %h3.general-subtitle Thank You for your Order!
    %p.fw-300 
      = "An order confirmation has been sent to #{current_user.email}"
  .row.mb-20
    .col-sm-6
      = render 'shipping_address_info'
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0
        = "Order ##{@order.number}"
      %p.general-address.mb-30
        = "#{@order.complated_at}"
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        = render 'carts/line_items_list', object: @order
  .text-center.general-text-right
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'summary'
  .text-center
    = button_to 'Back to Store', catalog_path, method: :get,  class: 'btn btn-default mb-20'