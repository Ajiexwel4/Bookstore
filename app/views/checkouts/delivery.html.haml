%main.container.general-main-wrap
  = render 'steps'
  = form_tag(checkout_path, method: :put) do
    %h3.general-subtitle Credit Card      
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th.col-method
              %span.in-grey-600.ml-40 Method
            %th
              %span.in-grey-600 Days
            %th
              %span.in-grey-600 Price
        %tbody        
          - Delivery.decorate.each do |delivery|
            %tr
              %td
                .form-group.radio.mt-0.mb-0
                  %label.radio-label                  
                    %input.radio-input{type: "radio", name: "delivery_id", value: "#{delivery.id}", hidden: "true"}
                    %span.radio-icon
                    %span.radio-text
                      = delivery.title
              %td
                %span
                  = delivery.days
              %td
                %span.font-16.in-gold-500
                  = delivery.price
    .general-text-align
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        = render 'summary'
    .text-center
      = submit_tag 'Save and Continue',  class: 'btn btn-default center-block mb-20'    
