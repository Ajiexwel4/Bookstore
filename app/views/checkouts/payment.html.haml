%main.container.mb-res-50
  = render 'steps'
  %h3.general-subtitle Credit Card
  = simple_form_for 'credit_card', url: checkout_path, method: :put, class: 'max-600.mb-80' do |field|
    .row
      .col-sm-6
        = field.label :number, 'Card Number', class: 'control-label input-label'
        = field.input :number, as: :integer, label: false, id: 'cardNumber', class: 'form-control', placeholder: 'Card Number'
        .row
          .col-sm-6
            .form-group
              = field.label :name, 'Name on Card', class: 'control-label input-label'
              = field.input 'name', label: false, placeholder: 'Name on Card', id: 'cardName', class: 'form-control'          
          .col-sm-3
            .form-group
              = field.label :period, 'MM / YY', class: 'control-label input-label'
              = field.input :period, label: false, placeholder: 'MM / YY', id: 'firstName', class: 'form-control'
          .col-sm-3
            .form-group.relative
              = field.label :cvv, 'CVV', class: 'control-label input-label'
              = field.input :cvv, as: :integer, label: false, placeholder: 'CVV', id: 'firstName', class: 'form-control'
              = link_to '', title: '3-digit security code, usually found on the back of your card. American Express cards has 4-digit code, located on the front', 'data-toggle': 'tooltip' do
                %i.fa.fa-question-circle.general-form-help
    .general-text-align
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        = render 'summary'
    .text-center
      = field.submit 'Save and Continue', class: 'btn btn-default center-block mb-20'