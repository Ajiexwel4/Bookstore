%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign up    
  %form.general-form
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .form-group.mb-30
        %label.control-label.input-label Enter Email
        = f.input :email, label: false, required: true, autofocus: true, placeholder: 'Enter Email', class: "form-control"
      .form-group.mb-30
        %label.control-label.input-label Password
        = f.input :password, label: false, required: true, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control"        
      .form-group.mb-30
        %label.control-label.input-label{for: "confirm"} Confirm Password
        = f.input :password_confirmation, label: false, required: true, placeholder: 'Confirm Password', class: 'form-control'             
      .text-center      
        = f.button :submit, "Sign up"
      %br
  %p.general-sign-text.text-center    
    = link_to "Log in", new_session_path(resource_name), class: 'in-gold-500'
    %br