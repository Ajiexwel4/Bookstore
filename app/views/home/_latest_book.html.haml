%main.container
  %h3 Latest books  
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      - @latest_books.each_index do |index|
        %li{ class: "#{'active' if index == 0}", 'data-target': "#slider", 'data-slide-to': "#{index}" }      
    .carousel-inner{role: "listbox"}
      - @latest_books.each_with_index do |book,index|
        .item{class: "#{'active' if index == 1}"}
          .row
            .col-sm-5
              .general-img-wrap
                = image_tag(book.cover, class: 'img-shadow general-thumbnail-img', alt: 'design-book')
            .col-sm-7
              .mb-60
                %h1
                  = book.title
                %p.lead
                  = book.description
                %p.lead.small 
                  = book.authors
                .general-align
                  = button_tag 'Buy Now', class: "#{button_class_if(book)}"       
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next