%main.container
  %h3 Latest books  
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
      %li{'data-target': "#slider", 'data-slide-to': "2"}
    .carousel-inner{role: "listbox"}
      .item.active
        .row
          .col-sm-5
            .general-img-wrap
              = image_tag(@latest_books[0].cover, class: 'img-shadow general-thumbnail-img', alt: 'design-book')
          .col-sm-7
            .mb-60
              %h1
                = @latest_books[0].title
              %p.lead
                = @latest_books[0].description
              %p.lead.small 
                = @latest_books[0].authors
              .general-align
                = button_tag 'Buy Now', class: 'btn btn-primary'
