%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to 'Home', root_path, class: 'nav-link'            
          %li
            = link_to 'Shop', catalog_path, class: 'nav-link'            
          = if current_user
            %li
              = link_to 'Orders', orders_path, class: 'nav-link'              
            %li
              %a.nav-link{href: "#"} Settings
      .col-sm-3
        %p.general-nav-mail support@bookstore.com
        %p.general-nav-number (555)-555-5555
        %ul.list-inline.general-align
          %li
            = link_to 'https://facebook.com/', class: 'nav-link' do                         
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            = link_to 'https://twitter.com/', class: 'nav-link' do
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            = link_to 'https://plus.google.com/', class: 'nav-link' do
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            = link_to 'https://www.instagram.com/', class: 'nav-link' do
              %i.fa.fa-instagram{'aria-hidden': "true"}
